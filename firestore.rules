rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{userId} {
      allow read, write: if true;
    }

    // Agents collection
    match /agents/{agentId} {
      allow read: if true; // Anyone can read

      allow create: if isAuthenticated() && 
                      request.resource.data.developer_id == request.auth.uid; // Authenticated users can create, must set themselves as developer

      allow update: if isAuthenticated() && (
        // Creator can update their own agent (all fields)
        resource.data.developer_id == request.auth.uid ||
        // OR any authenticated user can increment installations
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['installations']) &&
         request.resource.data.installations == resource.data.installations + 1) ||
        // OR any authenticated user can increment/decrement likes
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']) &&
         request.resource.data.likes >= resource.data.likes - 1 &&
         request.resource.data.likes <= resource.data.likes + 1) ||
        // OR any authenticated user can increment/decrement dislikes
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['dislikes']) &&
         request.resource.data.dislikes >= resource.data.dislikes - 1 &&
         request.resource.data.dislikes <= resource.data.dislikes + 1) ||
        // OR any authenticated user can update likes and dislikes together (when toggling between them)
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'dislikes']) &&
         request.resource.data.likes >= resource.data.likes - 1 &&
         request.resource.data.likes <= resource.data.likes + 1 &&
         request.resource.data.dislikes >= resource.data.dislikes - 1 &&
         request.resource.data.dislikes <= resource.data.dislikes + 1) ||
        // OR any authenticated user can update multiple stat fields at once
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['installations', 'likes', 'dislikes']))
      );

      allow delete: if isAuthenticated() && 
                       resource.data.developer_id == request.auth.uid; // Only creator can delete
    }
  }
}
